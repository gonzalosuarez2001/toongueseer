generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cartoon {
  id    Int     @id @default(autoincrement())
  name  String
  toons Toon[]
  stats Stats[]
}

model Toon {
  id         Int     @id @default(autoincrement())
  name       String
  image_url  String
  cartoon_id Int
  cartoon    Cartoon @relation(fields: [cartoon_id], references: [id])
  guessed    Boolean @default(false)
}

model Stats {
  cartoon_id Int     @id
  daily_toon Int     @default(1)
  cartoon    Cartoon @relation(fields: [cartoon_id], references: [id])
}
